{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "./src",
    "baseUrl": "src",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@providers/*": [
        "providers/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}