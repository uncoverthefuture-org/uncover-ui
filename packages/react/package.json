{
    "name": "@uncover-ui/react",
    "author": "uncoverthefuture",
    "version": "0.2.23",
    "description": "Resuable ui component for react web development",
    "license": "MIT",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "engines": {
        "node": ">=10"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "yarn clean && yarn build:js && yarn build:types && yarn copy-assets",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
        "build:types": "tsc --emitDeclarationOnly",
        "copy-assets": "cpx \"src/assets/**/*\" lib/assets",
        "clean": "rimraf ./lib",
        "reinstall": "rimraf ./node_modules && rimraf ./yarn.lock && yarn",
        "prepare": "yarn build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "prepublish": "yarn version patch && yarn build",
        "publish": "yarn npm publish"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.7",
        "@babel/core": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-react": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@size-limit/preset-small-lib": "^11.0.0",
        "@storybook/addon-essentials": "^8.1.11",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-links": "^8.1.11",
        "@storybook/addons": "^7.6.3",
        "@storybook/react": "^8.1.11",
        "@types/lodash": "^4.14.202",
        "@types/react": "^18.2.41",
        "@types/react-dom": "^18.2.17",
        "@types/reactjs-localstorage": "^1.0.2",
        "babel-loader": "^9.1.3",
        "cpx": "^1.5.0",
        "cssnano": "^7.0.3",
        "husky": "^9.0.11",
        "install-peers-cli": "^2.2.0",
        "postcss": "^8.4.32",
        "postcss-loader": "^8.1.1",
        "react": ">=18",
        "react-dom": "^18.2.0",
        "react-is": "^18.2.0",
        "rimraf": "^5.0.7",
        "sass": "^1.69.5",
        "scss": "^0.2.4",
        "size-limit": "^11.0.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.6.2",
        "typescript": "^5.3.2"
    },
    "dependencies": {
        "@chakra-ui/react": "^2.8.2",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "autoprefixer": "^10.4.16",
        "bootstrap": "^5.3.2",
        "chakra-react-select": "^4.7.6",
        "framer-motion": "^11.2.12",
        "lodash": "^4.17.21",
        "lodash-es": "^4.17.21",
        "node-sass": "^9.0.0",
        "react-bootstrap": "^2.10.3",
        "react-dropzone": "^14.2.3",
        "react-icons": "^5.2.1",
        "react-phone-number-input": "^3.3.7",
        "reactjs-localstorage": "^1.0.1"
    },
    "peerDependencies": {
        "@chakra-ui/react": "^2.8.2",
        "@emotion/react": "*",
        "@emotion/styled": "*",
        "chakra-react-select": "^4.7.6",
        "framer-motion": "^11.2.12",
        "he": "^1.2.0",
        "moment": "^2.30.1",
        "react": ">=18",
        "react-bootstrap": "^2.10.3",
        "react-dropzone": "^14.2.3",
        "react-icons": "^5.2.1"
    },
    "gitHead": "bd208d8e7a9b75a840515fea709649fc286ae063",
    "repository": {
        "type": "git",
        "url": "https://github.com/uncoverthefuture-org/uncover-ui/tree/master/packages/react"
    }
}
