{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "./src",
    "baseUrl": "src",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [ "ESNext" ],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utilities/*": [
        "utilities/*"
      ],
      "@providers/*": [
        "providers/*"
      ],
      "@themes/*": [
        "themes/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}